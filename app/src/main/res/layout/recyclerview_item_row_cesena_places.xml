<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/lesson_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/row_margin"
        android:layout_marginLeft="@dimen/row_margin"
        android:layout_marginTop="@dimen/row_margin"
        android:text="Title"
        android:textColor="@color/color_black"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/day_and_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lesson_title"
        android:layout_marginBottom="@dimen/row_margin"
        android:layout_marginLeft="@dimen/row_margin"
        android:layout_marginTop="@dimen/row_margin"
        android:text="Description" />

    <ImageView
        android:id="@+id/favourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/day_and_time"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/day_and_time"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/row_margin"
        android:layout_marginLeft="@dimen/row_margin"
        android:layout_marginRight="@dimen/row_margin" />


    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/listDivider" />

</RelativeLayout>



