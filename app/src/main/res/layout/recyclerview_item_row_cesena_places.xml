<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/activity_vertical_margin"
    app:cardElevation="4dp">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/room_details_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/row_margin"
            android:layout_marginLeft="@dimen/row_margin"
            android:layout_marginTop="@dimen/row_margin"
            android:text="Title"
            android:textColor="@color/color_black"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/room_details_text_view"
            android:layout_marginBottom="@dimen/row_margin"
            android:layout_marginLeft="@dimen/row_margin"
            android:layout_marginTop="@dimen/row_margin"
            android:text="Description" />

        <ImageView
            android:id="@+id/favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/description"
            android:layout_marginBottom="@dimen/row_margin"
            android:layout_marginLeft="@dimen/row_margin"
            android:layout_marginRight="@dimen/row_margin"
            android:src="@drawable/ic_action_name" />

        <ImageView
            android:id="@+id/navigation_header_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_marginBottom="@dimen/row_margin"
            android:layout_toEndOf="@+id/favourite"
            android:layout_toRightOf="@+id/favourite"
            android:src="@drawable/ic_navigation" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

